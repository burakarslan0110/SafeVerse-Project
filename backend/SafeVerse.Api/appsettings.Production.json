{
  "ConnectionStrings": {
    "Default": ""
  },
  "Jwt": {
    "Key": "",
    "Issuer": "",
    "Audience": ""
  },
  "Llm": {
    "Provider": "",
    "Endpoint": "",
    "GeminiApiKey": "",
    "GeminiBaseUrl": "",
    "GeminiModel": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    }
  },
  "AllowedHosts": "*",
  "CORS": {
    "AllowedOrigins": []
  },
  "RateLimit": {
    "EnableLimiting": true,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*/auth/register",
        "Period": "1m",
        "Limit": 3
      }
    ]
  },
  "Security": {
    "EnableSecurityHeaders": true,
    "RequireHttps": true,
    "HstsMaxAge": 31536000
  }
}